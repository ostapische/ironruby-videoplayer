<Window x:Name="main_window" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="IronRuby Videoplayer" Width="800" Height="600">
	<Grid x:Name="main_grid" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80*" />
			<ColumnDefinition Width="20*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="20" />
		</Grid.RowDefinitions>
		<MediaElement x:Name="main_media_element" Grid.Row="0" Grid.Column="0" Width="Auto" Height="Auto" />
		<StackPanel x:Name="buttons_stack_panel" Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Width="Auto" Height="Auto">
			<Button x:Name="play_button" Content="Play" Width="Auto" Height="Auto" />
			<Button x:Name="pause_button" Content="Pause" Width="Auto" Height="Auto" />
			<Button x:Name="stop_button" Content="Stop" Width="Auto" Height="Auto" />
		</StackPanel>
		<ListBox x:Name="files_list_box" Grid.Row="0" Grid.Column="1" Height="Auto" Width="Auto" AllowDrop="True" />
	</Grid>
</Window>